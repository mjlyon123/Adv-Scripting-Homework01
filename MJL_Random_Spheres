import maya.cmds as cmds
import random

#def createSphereGrid(planeScale, sphereMaxRadi, sphereNum):

def createSphereGrid(planeSize):
	cmds.plane(size=planeSize, rotation = 90,0,0)					#Creates a plane of a size specified by the argument 'planeSize'
